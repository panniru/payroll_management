.row
  %h3
    = raw "#{link_to @employee_master.name, @employee_master} #{link_to  'Salary Taxes', employee_master_salary_taxes_path(@employee_master)}"
  %hr
.row
  = render :partial => "employee_header", :locals => {:employee => @employee_master}
.row
  %hr
.row
  .col-md-4
    = render "earning_terms"
  .col-md-5
    = render "deduction_terms"
  .col-md-3
    %table.table.table-bordered
      %thead
        %th Component
        %th Amount
      %tbody
        %tr
          %th Tax Projected
          %td= @salary_tax.tax_projected
        %tr

        %tr
          %th Surcharge(+)
          %td= @salary_tax.surcharge
        %tr
          %th Educational Cess(+)
          %td= @salary_tax.educational_cess
        %tr
          %th Net Tax
          %td= @salary_tax.net_tax
        %tr
          %th Tax Deducted(-)
          %td= @salary_tax.tax_paid
        %tr
          %th Balance Tax
          %td= @salary_tax.balance_tax
.row
  .col-md-offset-6
    = edit_button(edit_employee_master_salary_tax_path(@employee_master, @salary_tax))
    = print_button(employee_master_salary_tax_path(@employee_master, @salary_tax, :format => :pdf))
    = link_to raw("<i class='fa fa-file-o fa-lg'></i> Form16"), "/employee_masters/#{@employee_master.id}/salary_taxes/#{@salary_tax.id}/form16", :class => "btn btn-primary"
