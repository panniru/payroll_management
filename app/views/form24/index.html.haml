.row
  .pull-left
    %h1 
      = link_to "Form24Q"
  .pull-right
    = link_to "Generate24Q" , new_form24_path , :class => 'btn btn-primary'
%hr
%h3
  .row
    %table.table.table-condensed
      %thead
        %th
              
      %tbody
        - @forms.each do |x|
          %tr
            %td
              %h3
                - if (x.quarter == 1)
                  = link_to "01-Apr-"+  + x.financial_year.to_s +  "\s" + " \t To \t 30-Jun-" + x.financial_year.to_s , quarter_details_form24_index_path(:quarter => x.quarter , :financial_year => x.financial_year)
                  %br
                - elsif (x.quarter == 2)
                  = link_to '01-July-' + x.financial_year.to_s +  "\s" + 'To 30-Sep-' + x.financial_year.to_s , quarter_details_form24_index_path(:quarter => x.quarter , :financial_year => x.financial_year)
                  %br
                - elsif (x.quarter == 3)
                  = link_to '01-Oct-' + x.financial_year.to_s +  "\s" + 'To 31-Dec-' + x.financial_year.to_s , quarter_details_form24_index_path(:quarter => x.quarter , :financial_year => x.financial_year)
                  %br
                - elsif (x.quarter == 4)
                  = link_to '01-Jan-' + x.financial_year.to_s +  "\s" + 'To 31-Mar-' + x.financial_year.to_s , quarter_details_form24_index_path(:quarter => x.quarter , :financial_year => x.financial_year)
                  %br
