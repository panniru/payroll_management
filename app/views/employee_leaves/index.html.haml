.page-header
  %h1
    
    = link_to "Leaves" , '#'
    = link_to_upload(upload_employee_leaves_path)
%table.table.table-condensed
  %thead
    %th Code
    %th Name
    %th Date
    %th Days Worked
    %th Working Days
    %th SL
    %th PL
    %th CL
    %th LOP
    %th
  %tbody
    - @employee_leaves.each do |employee|
      %tr
        %td= employee.code
        %td= employee.employee_master.name
        %td= employee.entered_date
        %td= employee.days_worked
        %td= employee.working_days
        %td= employee.sl
        %td= employee.pl
        %td= employee.cl
        %td= employee.lop
        %td
          = edit_button(edit_employee_leafe_path(employee))
