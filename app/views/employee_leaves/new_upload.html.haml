.page-header
  %h2
    = link_to "Upload Leaves", "#"
%p
  A Csv or Exel can be uploaded. First row should have the column names
%br
= form_for @employee_leave_uploader ,:url => upload_employee_leaves_path , :multipart => true, :html => { :class => "form"} do |f|
  - if f.object.errors.present?
    = render "shared/error_messages", :object => f.object
  .form-group
    .row
      .col-md-1
        = f.label :date, :class => ' control-label'
      .col-md-3
        = f.text_field :entered_date , :value => session[:transaction_date].to_s , :disabled=>true
      
      .col-md-4
        = f.file_field :file
      .col-md-3
        = f.submit "Upload", :class => "btn btn-primary"
        - if session[:transaction_date].strftime("%m") == '12'
          = link_to "Download sample", new_upload_employee_leaves_path(:format => :xlsx)
        - else 
          = link_to "Download Sample",  export_employee_leaves_path
