.page-header
  %h2
    = link_to "Upload Leaves", "#"
%p
  A Csv or Exel can be uploaded. First row should have the column names

= form_for @employee_leave_uploader ,:url => upload_employee_leaves_path , :multipart => true, :html => { :class => "form"} do |f|
  - if f.object.errors.present?
    = render "shared/error_messages", :object => f.object
  .form-group
    .row
      .col-md-2
      .col-md-1
        = f.label :date, :class => ' control-label'
      .col-md-4
        %span.label.label-default 
          = Date.today.to_s
      
        //= Date.today.to_s  
    .row
      .col-md-6
        = f.file_field :file
      .col-md-6
        = f.submit "Upload", :class => "btn btn-primary"
        = link_to "Download sample", new_upload_employee_leaves_path(:format => :xlsx)
