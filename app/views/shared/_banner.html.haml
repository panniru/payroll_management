.navbar.navbar-inverse
  .navbar-inner.container
    .col-sm-6
      .navbar-header
        .navbar-brand= link_to "Payroll", "#", :class => "navbar-brand"
      %ul.nav.navbar-nav
        %li.navbar-brand
          = link_to "Employees", employee_masters_path
    .pull-right
      - if current_user.present?
        %ul.nav.navbar-nav
          %li.dropdown.navbar-brand
            = link_to raw("#{current_user.user_id} <b class='caret'></b>"), "#", "data-toggle" => "dropdown", :class => 'dropdown-toggle'
            %ul.dropdown-menu.dropdown-menu-right
              %li
                = link_to "Sign Out", destroy_user_session_path, :data => {:method => :delete}
                = link_to "Change Password", edit_user_password_path(current_user)
          
                    
