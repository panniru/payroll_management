.row
  = form_tag reports_employee_masters_path, :method => "GET",:class=>"form-horizontal" do
    .col-sm-2
      = text_field_tag  :from_date, params[:from_date], :class => "form-control datepicker"
    .col-sm-2
      = text_field_tag :to_date, params[:to_date] ,:class => "form-control datepicker"
      %br
    .col-sm-2
      = select_tag :status, options_for_select([['Joining'],['Attrition']]), :class => 'form-control'
    .col-sm-2
      %button{:type=>"submit", :class=> "btn btn-primary"}= "Go"
     
.row
  .col-md-10
    %table.table.table-condensed
      %thead
        %th Code
        %th Initials
        %th Name
        %th Designation
        %th Department
      %tbody
        - @employee_masters.each do |employee_master|
          %tr
            %td= employee_master.code
            %td= employee_master.initials
            %td= employee_master.name
            %td= employee_master.designation_master.name
            %td= employee_master.department_master.name
  .col-md-2
