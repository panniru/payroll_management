.page-header
  %h1 
    = link_to "Employees", employee_masters_path

= render "search_employee"
%br
%table.table.table-condensed
  %thead
    %th Code
    %th Initials
    %th Name
    %th Designation
    %th Department
  %tbody
    - @employee_masters.each do |employee_master|
      %tr
        %td= link_to employee_master.code, employee_master
        %td= employee_master.initials
        %td= employee_master.name
        %td= employee_master.designation_master.name
        %td= employee_master.department_master.name


= will_paginate @employee_masters, param_name: 'page', previous_label: h("<"), next_label: h(">")
