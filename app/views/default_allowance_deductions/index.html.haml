.page-header
  %h2 Default Allowances & Deductions 
  = link_to_upload(default_allowance_deductions_new_upload_path)
%br
- if @default_allowance_deductions.present?
  %table.table.table-condensed
    %thead
      %th Code
      %th Name
      - DefaultAllowanceDeduction.valid_attributes.each do |key|
        %th= key.titleize

    %tbody
      - @default_allowance_deductions.each do |dad|
        %tr
          %td= link_to dad.employee_master.code, dad.employee_master
          %td= dad.employee_master.name
          - DefaultAllowanceDeduction.valid_attributes.each do |key|
            %td= dad.send(key)



  = will_paginate @default_allowance_deductions, param_name: 'page', previous_label: h("<"), next_label: h(">")

