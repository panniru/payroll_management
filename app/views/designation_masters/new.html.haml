%h1 
  = link_to "Admin Mapping" , designation_masters_path
 
%h4
  %form{:ng_controller => "DesignationMasterController" , :ng_init => "getDesignation(1)", :ng_submit => "saveDesignation()"  }
    .col-md-3.col-md-offset-6
      %my-pagination{:from => "from_index", :to => "to_index", :total=> "total_entries", :current_page => "current_page",:action => "getDesignation(page)"}
    .col-md-10
      %table.table.table-condensed
        %thead
          %th Designation
          %th Managed By
        %tbody
          %tr{"ng-repeat" => "designation in designations.designations"}
            %td {{designation.name}}
            %td
              %input{:ng_model =>"designation['managed_by']",  :type => "radio", :value => Role.find_by_code("accountant").id }
              Accountant
              %input{:ng_model =>"designation['managed_by']",  :type => "radio", :value => Role.find_by_code("manager").id }
              Manager
              = hidden_field_tag :managed_by , :value => Role.find_by_code("accountant").role
              
        .pull-right
          = save_button
